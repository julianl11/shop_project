@startuml
skinparam classAttributeIconSize 0
skinparam linetype ortho

class customer {
  + customer_id : int
  + name : string
  + address : string
  + email : string
}

class order {
  + order_id : int
  + customer_id : int
  + total_amount : float
  + order_date : date
  + status : string
}

class product {
  + product_id : int
  + name : string
  + description : string
  + base_price : float
}

class order_item {
  + order_item_id : int
  + order_id : int
  + product_id : int
  + quantity : int
  + second_chance_quantity : int
  + size : string
  + shape : string
  + filling : string
  + toppings : string
  + image_path : string
}

customer "1" -- "1..*" order : creates >
order "1" -- "1..*" order_item : contains >
product "1" -- "1..*" order_item : is_part_of >
@enduml
